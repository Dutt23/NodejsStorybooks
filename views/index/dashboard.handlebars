<h1>Welcome {{user.firstName}}</h1>
<p>Your Stories</p>
{{#if stories}}
<table class="stripped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Date</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        {{#each stories}}
        <tr>
            <td>
                <a href="/stories/show/{{id}}">{{title}}</a>
            </td>
            <td>{{dateFormat date 'MMMM Do YYYY'}}</td>
            <td>
                <span class="dash-status">{{status}}</span>
            </td>
            <td>
                <a href="/stories/edit/{{id}}" class="left-align btn">
                    <i class="fa fa-pencil"></i>Edit</a>

                <form action="/stories/{{id}}?_method=DELETE" id="delete-form" method="post">
                <input type="hidden" name="_method" value="DELETE">
                    <button class="btn red">
                        <i class="fa fa-remove"></i>Delete</button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{else}}
<p>You have not published any stories</p>
{{/if}}